<div class="container">
  <div class="row">
    <div class="col-12 col-md-6 offset-lg-3">
      <h1>Create a new Watch List</h1>
      <%= simple_form_for @list do |f| %>
        <%= f.input :name %>
        <%= f.input :photo, as: :file %>
        <%= f.submit class: 'btn btn-primary' %>
      <% end %>
    </div>
  </div>
</div>
